@model List<Product>
@{
    ViewData["Title"] = "Index";
}




<div class="main-panel">
    <div>
        <a class="btn btn-success" asp-area="MultiAdmin" asp-controller="Product" asp-action="Create">Create new plant</a>
    </div>
    @if(TempData["FileName"] != null)
    {
        <div class="alert alert-danger">@TempData["FileName"]</div>
    }
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Price
                    </th>
                    
                    <th>
                        Settings
                    </th>
                     <th>
                        Category
                    </th>
                
                </tr>
            </thead>
            <tbody>
                @foreach (Product product in Model)
                {
                    <tr>
                        <td>
                            <img style="width:150px !important; height:150px; object-fit:contain" src="~/assets/img/@product.ProductImages.FirstOrDefault(p=>p.IsMain == true)?.Name" alt="">
                        </td>
                        <td>
                            @product.Name
                        </td>
                         <td>
                            @product.Price
                        </td>
                        <td>
                            
                        </td>
                          <td>
                              @product.Category.Name
                        </td>
                        <td  class="d-flex" style="height:200px; align-items:center">
                                <div>
                                    <a asp-area="MultiAdmin" asp-controller="product" asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning"><i class="mdi mdi-border-color"></i></a>
                                </div>
                                <div>
                                    <a class="btn btn-danger" asp-controller="product" asp-action="Delete" asp-route-id="@product.Id"><i class="mdi mdi-delete"></i></a>
                                </div>
                                 <div>
                                    <a class="btn btn-info" asp-controller="product" asp-action="Detail" asp-route-id="@product.Id"><i class="mdi mdi-delete"></i></a>
                                </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

