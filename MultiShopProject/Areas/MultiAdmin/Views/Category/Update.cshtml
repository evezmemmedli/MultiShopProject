@model Category
@{
    ViewData["Title"] = "Update";
}


<div class="main-panel">
    <h1>
        Create Category
    </h1>
     <div class="image my-3">
        <img width="300"  src="~/assets/img/@Model.Image">
    </div>
    <form class="mt-3" method="post" enctype="multipart/form-data">
        <div>
        <label >Image:</label><br />
        <input asp-for="Photo" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Photo"></span>
    </div>
    <div>
        <label>
            Category Name
        </label> <br />
        <input style="border : 3px solid" type="text" class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name">

        </span>
    </div>
    <div class="mt-2">
        <button class="btn btn-success" type="submit">
            Create
        </button>
    </div>

</form>
</div>
