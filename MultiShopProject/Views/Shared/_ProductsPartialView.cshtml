@foreach (Product product in Model)
           {
               
                <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <div class="product-item bg-light mb-4">
                    <div class="product-img position-relative overflow-hidden">
                        <img class="img-fluid w-100" src="~/assets/img/@product.ProductImages.FirstOrDefault(p=>p.IsMain==true).Name" alt="">
                        <div class="product-action">
                            <a class="btn btn-outline-dark btn-square" asp-controller="Product" asp-action="AddBasket" asp-route-id="@product.Id"><i class="fa fa-shopping-cart"></i></a>
                            <a class="btn btn-outline-dark btn-square" href="~/assets/"><i class="far fa-heart"></i></a>
                            <a class="btn btn-outline-dark btn-square" href="~/assets/"><i class="fa fa-sync-alt"></i></a>
                            <a class="btn btn-outline-dark btn-square" href="~/assets/"><i class="fa fa-search"></i></a>
                        </div>
                    </div>
                    <div class="text-center py-4">
                        <a class="h6 text-decoration-none text-truncate" asp-controller="product" asp-action="detail" asp-route-id="@product.Id" >@product.Name</a>
                        <div class="d-flex align-items-center justify-content-center mt-2">
                            <h5>$@product.Price</h5>
                        </div>
                        <div class="d-flex align-items-center justify-content-center mb-1">
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small>(99)</small>
                        </div>
                    </div>
                </div>
            </div>
           }